---
import '../styles/global.css';
import Particles from '../components/Particles.jsx';

// Defaults SEO
const defaultTitle = 'Jorge Campos | Technical Writer & Developer';
const defaultDescription =
  'Portafolio profesional de Jorge Campos, Technical Writer especializado en documentaci√≥n t√©cnica, APIs, DevOps y apps m√≥viles.';

const {
  title = defaultTitle,
  description = defaultDescription,
} = Astro.props;

// Canonical URL (seg√∫n la ruta actual)
const siteUrl = 'https://jorgecamposdocs.vercel.app';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();

// Datos estructurados (Schema.org)
const schemaPerson = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Jorge Campos',
  url: siteUrl,
  jobTitle: 'Technical Writer & Developer',
  description: defaultDescription,
  sameAs: [
    'https://github.com/JorgeECampos',
    'https://www.linkedin.com/in/jorgeecampos/',
  ],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- üîπ T√≠tulo y descripci√≥n (override por p√°gina con Astro.props) -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- üîπ Canonical por p√°gina -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- üîπ Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Jorge Campos ‚Äì Portfolio" />
    <meta property="og:url" content={canonicalUrl} />
    <meta
      property="og:image"
      content={`${siteUrl}/preview.png`}
    />

    <!-- üîπ Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content={`${siteUrl}/preview.png`}
    />

    <!-- üîπ Schema.org Person -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(schemaPerson)}
    />

    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>

  <body class="relative min-h-screen bg-gradient-to-b from-gray-50 to-gray-200 dark:from-gray-950 dark:to-gray-900 text-gray-800 dark:text-gray-100 font-sans">
    <!-- Fondo animado -->
    <Particles client:load />

    <!-- Header / Nav -->
    <header class="backdrop-blur-md bg-white/50 dark:bg-gray-900/40 sticky top-0 z-20 shadow-sm">
      <nav class="max-w-6xl mx-auto flex flex-wrap justify-center gap-6 p-4 text-sm font-semibold text-gray-700 dark:text-gray-300">
        <a href="/" class="hover:text-indigo-600">About</a>
        <a href="/projects" class="hover:text-indigo-600">Projects</a>
        <a href="/policies" class="hover:text-indigo-600">Policies</a>
        <a href="/skills" class="hover:text-indigo-600">Skills</a>
        <a href="/blog" class="hover:text-indigo-600">Blog</a>
        <a href="/contact" class="hover:text-indigo-600">Contact</a>
      </nav>
    </header>

    <!-- Main content -->
    <main class="relative z-10 max-w-6xl mx-auto p-6 md:p-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 text-center py-6 text-sm text-gray-600 dark:text-gray-400">
      <p>&copy; {new Date().getFullYear()} Jorge Campos ‚Äî All rights reserved.</p>
    </footer>
  </body>
</html>
