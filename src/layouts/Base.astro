---
import '../styles/global.css';
import Particles from '../components/Particles.jsx';
const { title = 'Portfolio', description = 'Technical Writing Portfolio' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>

  <body class="relative min-h-screen bg-gradient-to-b from-gray-50 to-gray-200 dark:from-gray-950 dark:to-gray-900 text-gray-800 dark:text-gray-100 font-sans">
    <!-- Fondo animado -->
    <Particles client:load />

    <!-- Header / Nav -->
    <header class="backdrop-blur-md bg-white/50 dark:bg-gray-900/40 sticky top-0 z-20 shadow-sm">
      <nav class="max-w-6xl mx-auto flex flex-wrap justify-center gap-6 p-4 text-sm font-semibold text-gray-700 dark:text-gray-300">
        <a href="/" class="hover:text-indigo-600">About</a>
        <a href="/projects" class="hover:text-indigo-600">Projects</a>
        <a href="/policies" class="hover:text-indigo-600">Policies</a>
        <a href="/skills" class="hover:text-indigo-600">Skills</a>
        <a href="/blog" class="hover:text-indigo-600">Blog</a>
        <a href="/contact" class="hover:text-indigo-600">Contact</a>
      </nav>
    </header>

    <!-- Main content -->
    <main class="relative z-10 max-w-6xl mx-auto p-6 md:p-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="relative z-10 text-center py-6 text-sm text-gray-600 dark:text-gray-400">
      <p>&copy; {new Date().getFullYear()} Jorge Campos â€” All rights reserved.</p>
    </footer>
  </body>
</html>
