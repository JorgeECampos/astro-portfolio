---
import Base from '../../layouts/Base.astro';
import { getEntryBySlug } from 'astro:content';
const { slug } = Astro.params;
const entry = await getEntryBySlug('cases', slug);
if (!entry) throw new Error('Not found');
const { Content } = await entry.render();
---
<Base title={entry.data.title} description="Case study details">
  <article class="card">
    <h1>{entry.data.title}</h1>
    {entry.data.client && <p><strong>Client:</strong> {entry.data.client}</p>}
    {entry.data.outcomes && <ul>{entry.data.outcomes.map(o => <li>{o}</li>)}</ul>}
    <Content />
  </article>
</Base>