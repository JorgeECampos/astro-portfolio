---
import Base from '../layouts/Base.astro';
import Hero from '../components/Hero.jsx';

const about = {
  headline: "✨ Technical Writer & Software Developer",
  summary: `I craft structured, developer-focused documentation and software development policies.
My work ensures clarity, traceability, and compliance across SDLC, aligning with ISO, FDA, and SOC 2.`,
  links: [
    { label: "GitHub", url: "https://github.com/JorgeECampos" },
    { label: "LinkedIn", url: "https://www.linkedin.com/in/jorge-eduardo-campos" },
    { label: "Download CV (PDF)", url: "/cv.pdf" }
  ]
};
---

<Base title="About – Portfolio">
  <Hero client:load headline={about.headline} summary={about.summary} links={about.links} />

  <!-- Focus -->
  <section class="max-w-4xl mx-auto mt-16 p-8 bg-white dark:bg-gray-900 text-gray-800 dark:text-gray-100 rounded-2xl shadow-lg">
    <h2 class="text-3xl font-bold mb-6 text-center text-indigo-600">Main Focus Areas</h2>
    <ul class="grid md:grid-cols-3 gap-4 text-lg">
      <li class="p-4 rounded-xl border"><span class="text-2xl">📘</span><br/><b>Policies</b><br/>Git, code review, CI/CD, security.</li>
      <li class="p-4 rounded-xl border"><span class="text-2xl">⚙️</span><br/><b>Docs</b><br/>API/SDK, diagrams, change control.</li>
      <li class="p-4 rounded-xl border"><span class="text-2xl">🤝</span><br/><b>Impact</b><br/>Clarity, scale, collaboration.</li>
    </ul>
  </section>

  <!-- CTA -->
  <section class="mt-16 text-center p-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl shadow-xl text-white">
    <h2 class="text-4xl font-bold mb-3">🚀 Explore My Work</h2>
    <p class="opacity-90 mb-6">See live examples of policies, SDK docs and process design.</p>
    <a href="/projects" class="px-8 py-4 bg-white text-blue-700 rounded-full font-bold hover:bg-blue-100 transition">View Projects</a>
  </section>
</Base>
