---
import Base from '../layouts/Base.astro';
import ProjectCard from '../components/ProjectCard.jsx';

const projects = [
    {
    title: "🚨 Vecino Seguro – Community Safety App",
    summary:
      "Developed a Flutter app from scratch integrating Firebase Firestore, Storage, and Google Maps APIs. Features CRUD operations, authentication, and push notifications.",
    tags: ["API", "Flutter", "Firebase", "Full Stack"],
    links: [
      { label: "Live Doc", url: "https://jorgeecampos.github.io/Vecino-Seguro/" },
      { label: "Source Code", url: "https://github.com/jorgeecampos/Vecino-Seguro" }
    ]
  },
  {
  title: "📦 Business Platform – Front-End Overview",
  summary: "A modular, service-oriented web platform designed to handle entity creation, document automation, and tax integrations through APIs.",
  tags: ["Architecture", "Docs", "Front-End"],
  links: [
    { label: "View Case Study", url: "/projects/business-platform" }
  ]
},
  {
    title: "📘 Software Development Policy Framework",
    summary: "Created a standardized SDLC policy set for cross-functional teams covering branching, code review, and release validation.",
    tags: ["Policy", "Quality", "CI/CD"],
    links: [{ label: "View Case Study", url: "/case-studies/policy-rollout" }]
  },
  {
    title: "⚙️ API & SDK Documentation Hub",
    summary: "Built developer documentation architecture with versioned API references, quickstarts, and interactive samples.",
    tags: ["API", "SDK", "Docs"],
    links: [{ label: "Read More", url: "/case-studies/api-docs" }]
  },
  {
    title: "🔒 Security Validation Checklist",
    summary: "Documented and automated validation steps to meet SOC 2 and ISO 27001 standards across all product releases.",
    tags: ["Security", "Validation"],
    links: [{ label: "Preview", url: "#" }]
  },
  {
    title: "📊 Release Notes Automation",
    summary: "Automated release notes generation with structured templates, tagging, and CI/CD pipeline triggers.",
    tags: ["Automation", "DevOps", "Docs"],
    links: [{ label: "Learn More", url: "#" }]
  }
];
---

<Base title="Projects – Portfolio">
  <section class="text-center mb-12">
    <h1 class="text-4xl font-bold text-indigo-600 mb-4">Highlighted Projects</h1>
    <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-300">
      These projects showcase how I blend documentation, process design, and compliance alignment to improve developer efficiency and audit readiness.
    </p>
  </section>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {projects.map((p, i) => (
      <ProjectCard client:load p={p} i={i} />
    ))}
  </div>
</Base>
